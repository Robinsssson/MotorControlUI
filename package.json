{
  "name": "electron-serialport",
  "version": "1.0.2",
  "description": "A minimal Electron application with node serialport",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
