    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "electron": "^26.4.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.14.0",
    "globals": "^15.11.0"
  },
  "dependencies": {
    "chart.js": "^4.4.6",
    "serialport": "^10.3.0",
    "tableify": "^1.1.1"
  },
  "engines": {
    "node": "18.16.1",
    "npm": "9.5.1"
  },
  "build": {
    "appId": "com.yourapp.id",
    "mac": {
      "target": "dmg"
